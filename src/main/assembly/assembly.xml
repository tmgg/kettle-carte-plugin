<assembly>
    <id>carte-plugin</id>
    <includeBaseDirectory>false</includeBaseDirectory>

    <formats>
        <format>zip</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>target</directory>
            <includes>
                <include>*.jar</include>
            </includes>
            <outputDirectory>plugins/servlets/lib/</outputDirectory>
        </fileSet>

        <!-- 从目标目录拷贝文件去压缩 -->
        <fileSet>
            <directory>plugins</directory>
            <outputDirectory>/plugins/</outputDirectory>
        </fileSet>


    </fileSets>
</assembly>
